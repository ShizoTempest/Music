@page
@model Artist

<h1>Удаление артиста</h1>

<h3>Вы уверены, что хотите удалить этого артиста?</h3>
<div>
    <h4>@Model.Name</h4>
    <img src="@Model.UrlImg" alt="Фото артиста" class="img-fluid mb-3" />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>
