@page
@using Music.Filters
@model IEnumerable<Artist>
@{
    var filter = ViewBag.Filter as ArtistFilter;
}

<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-3">
            <input type="text" name="Name" value="@filter.Name" class="form-control" placeholder="Поиск по имени">
        </div>
        <div class="col-md-2">
            <select name="HasAlbums" class="form-control">
                <option value="">Все артисты</option>
                <option value="true" selected="@(filter.HasAlbums == true)">С альбомами</option>
                <option value="false" selected="@(filter.HasAlbums == false)">Без альбомов</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Фильтровать</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="
Index"
                   asp-route-SortBy="name"
                   asp-route-SortDesc="@(!filter.SortDesc)"
                   asp-route-Name="@filter.Name">
                    Имя @(filter.SortBy == "name" ? (filter.SortDesc ? "▼" : "▲") : "")
                </a>
            </th>
            <th>Действия</th>
        </tr>
    </thead>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == filter.Page ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-Page="@i"
                   asp-route-Name="@filter.Name"
                   asp-route-HasAlbums="@filter.HasAlbums"
                   asp-route-SortBy="@filter.SortBy"
                   asp-route-SortDesc="@filter.SortDesc">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
