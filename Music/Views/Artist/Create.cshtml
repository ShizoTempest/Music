@page
@model Artist

<h1>Добавить нового артиста</h1>

<form asp-action="Create" enctype="multipart/form-data" class="mt-4">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя артиста</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label class="control-label">Фото артиста</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" required />
        <small class="text-muted">Допустимые форматы: JPG, PNG (макс. 10MB)</small>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Добавить артиста</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>
